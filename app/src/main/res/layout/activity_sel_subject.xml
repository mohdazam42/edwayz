<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edwayzapp.edwayz.SelSubjectActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quest_back">

        <ImageView
            android:id="@+id/ll_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/menu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/ll_sound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/music" />

        <ImageView
            android:id="@+id/ll_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/previous" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/board">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="Oue Subject"
                android:textColor="@color/textcolor"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subject"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/environment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/plank"
                    android:gravity="center"
                    android:text="Our Environment"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_planet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_env"
                    android:background="@drawable/plank"
                    android:gravity="center"
                    android:text="Our Planet"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/solid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_planet"
                    android:background="@drawable/plank"
                    android:gravity="center"
                    android:text="Solid Liquid and Gas"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/geography_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_planet"
                    android:background="@drawable/plank"
                    android:gravity="center"
                    android:text="Geography"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/math_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_planet"
                    android:background="@drawable/plank"
                    android:gravity="center"
                    android:text="Math"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
