<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    tools:context="com.edwayzapp.fragments.QuestionFragment">

    <LinearLayout
        android:id="@+id/ans0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quest_box"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_ans0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="1) The early human being used the following to make\ntools:"
            android:textColor="#000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="3dp">
<!--
        <ImageView

            android:layout_width="match_parent"
            android:src="@color/colorPrimary"
            android:layout_height="70dp" />-->
        <ImageView
            android:id="@+id/ans1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:tint="@color/colorPrimary"
            android:background="@drawable/quest_box" />

        <TextView
            android:id="@+id/tv_ans1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="(1) stone"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/quest_box" />

        <TextView
            android:id="@+id/tv_ans2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="(1) stone"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/quest_box" />

        <TextView
            android:id="@+id/tv_ans3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="(1) stone"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/quest_box" />

        <TextView
            android:id="@+id/tv_ans4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="(1) stone"
            android:textColor="#000000" />
